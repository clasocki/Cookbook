      <xs:enumeration value="tbsp" />
      <xs:enumeration value="cup" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="WeightUnit">
    <xs:restriction base="xs:string">
      <xs:enumeration value="kg" />
      <xs:enumeration value="dag" />
      <xs:enumeration value="g" />
      <xs:enumeration value="mg" />
      <xs:enumeration value="oz" />
      <xs:enumeration value="lb" />
    </xs:restriction>
  </xs:simpleType>-->

  <!--<xs:simpleType name="EnergyUnit">
    <xs:restriction base="xs:string">
      <xs:enumeration value="kJ" />
      <xs:enumeration value="kcal" />
    </xs:restriction>
  </xs:simpleType>-->

  <!--<xs:simpleType name="MeasurementUnit">
    <xs:union memberTypes="tns:WeightUnit tns:VolumeUnit" />
  </xs:simpleType>-->

  <xs:simpleType name="MeasurementUnit">
    <xs:restriction base="xs:string">
      <!-- Weight units -->
      <xs:enumeration value="kg" />
      <xs:enumeration value="dag" />
      <xs:enumeration value="g" />
      <xs:enumeration value="mg" />
      <xs:enumeration value="oz" />
      <xs:enumeration value="lb" />

      <!-- Volume units -->
      <xs:enumeration value="l" />
      <xs:enumeration value="ml" />
      <xs:enumeration value="tsp" />
      <xs:enumeration value="tbsp" />
      <xs:enumeration value="cup" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="PreparationTime">
    <xs:simpleContent>
      <xs:extension base="xs:decimal">
        <xs:attribute name="units" type="tns:TimeUnit" use="optional" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="Ingredient">
    <xs:sequence>
      <xs:element name="name" type="xs:string" />
      <xs:element name="quantity" type="xs:decimal" />
      <xs:element name="units" type="tns:MeasurementUnit" />
    </xs:sequence>
    <xs:attribute name="factId" type="xs:int" use="required"/>
  </xs:complexType>

  <!--<xs:complexType name="IngredientRef">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="ingredient-name" type="xs:string" use="required" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>-->

  <!--<xs:group name="RecipeContent">
    <xs:choice>
      <xs:element name="ingredient-ref" type="tns:IngredientRef" />
      <xs:any namespace="http://www.w3.org/1999/xhtml" processContents="lax" />
    </xs:choice>
  </xs:group>-->

  <xs:complexType name="RecipeSection" mixed="true">
    <!--<xs:group ref="tns:RecipeContent" minOccurs="1" maxOccurs="unbounded" />-->
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="name" type="xs:string" use="optional" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="Preparation">
    <xs:sequence>
      <xs:element name="section" type="tns:RecipeSection" minOccurs="1" maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Ingredients">
    <xs:sequence>
      <xs:element name="ingredient" type="tns:Ingredient" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Recipe">
    <xs:sequence>
      <xs:element name="title" type="xs:string" />
      <xs:element name="preparationTime" type="tns:PreparationTime" />
      <xs:element name="portions" type="xs:int" />
      <xs:element name="ingredients" type="tns:Ingredients" />
      <xs:element name="content" type="tns:Preparation" />
    </xs:sequence>
    <xs:attribute name="id" type="xs:int" use="required" />
  </xs:complexType>

  <xs:complexType name="Recipes">
    <xs:sequence>
      <xs:element name="recipe" type="tns:Recipe" minOccurs="0" maxOccurs="unbounded">
        <xs:key name="ingredient-key">
          <xs:selector xpath="ingredients/ingredient" />
          <xs:field xpath="@factId" />
        </xs:key>
        <!--<xs:keyref name="ingredient-name-ref" refer="tns:ingredient-name-key">
          <xs:selector xpath="content/section/ingredient-ref" />
          <xs:field xpath="@ingredient-name" />
        </xs:keyref>-->
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <!--<xs:complexType name="CookBook">
    <xs:sequence>
      <xs:element name="recipes" type="tns:Recipes" />
      <xs:element name="nutrition-facts" type="tns:NutritionFacts" />
      <xs:element name="daily-values" type="tns:DailyValues" />
    </xs:sequence>
  </xs:complexType>-->

  <xs:element name="recipes" type="tns:Recipes">
    <xs:key name="recipe-key">
      <xs:selector xpath="recipe"/>
      <xs:field xpath="@id"/>
    </xs:key>
  </xs:element>

